<%- include('../header') %>
  <%- include('../sidebar') %>

    <main id="main" class="main">

      <div class="pagetitle">
        <h1>Brand</h1>
        <a style="float: right;" href="/brand/Add"><i class="bi bi-file-earmark-plus"></i>
          New Brand</a>
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item">Brands</li>
            <li class="breadcrumb-item active">List</li>
          </ol>
        </nav>
      </div><!-- End Page Title -->

      <% if (messages.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="bi bi-check-circle me-1"></i>
          <%= messages.success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <% } %>

          <section class="section">
            <div class="row">
              <div class="col-lg-12">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Brand Listing</h5>

                    <!-- Default Table -->
                    <table class="table">
                      <thead>
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">Title</th>
                          <th scope="col">Description</th>
                          <th scope="col">Image</th>
                          <th scope="col" colspan="2">Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (Brand.length> 0) { %>
                          <% Brand.map((brd, i)=> { %>
                            <tr>
                              <th scope="row">
                                <%= i+1 %>
                              </th>
                              <td>
                                <%= brd.title %>
                              </td>
                              <td>
                                <%= brd.description %>
                              </td>
                              <td>
                                <img src="<%= brd.brand_image %>" width="75" height="75" />
                              </td>
                              <td><a href="/brand/editBrand/<%= brd._id %>"><i class="bi bi-pencil-square"></i>
                                </a></td>
                              <td><a href="/brand/delete/<%= brd._id %>" class="DeleteOperationCategory"><i
                                    class="bi bi-file-earmark-x bi-xl"></i></a></td>
                            </tr>
                            <% }) %>
                              <% } else { %>
                                <tr>
                                  <td colspan="5">No Brands Found.</td>
                                </tr>
                                <% } %>


                      </tbody>
                    </table>
                    <!-- End Default Table Example -->
                  </div>
                </div>
              </div>
            </div>
          </section>
    </main>

    <main id="main" class="main">
      <div>

        <h1>Add Brand - <a href="/Brand/Add">Add</a> </h1>
        <div>
          <% if (messages.success) { %>
            <div class="alert alert-success">
              <%= messages.success %>
            </div>
            <% } %>
        </div>


        <ul>
          <% if (Brand.length> 0) { %>
            <% Brand.map((brnd, i)=> { %>
              <li>
                <span>
                  <%= i+1 %>--<%= brnd.title %>: <%= brnd.description %>
                </span>
                <a href="/Brand/editBrand/<%= brnd._id %>">Edit </a>
                || <a href="/Brand/delete/<%= brnd._id %>" class="DeleteOperationCategory">Delete</a>
              </li>
              <% }) %>
                <% } else { %>
                  <p>No Brand available.</p>
                  <% } %>
        </ul>


      </div>
    </main>




    <%- include('../footer') %>