<%- include('../header') %>
  <%- include('../sidebar') %>


    <main id="main" class="main">

      <div class="pagename">
        <h1>Form Layouts</h1>
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item">Category</li>
            <li class="breadcrumb-item active">Add</li>
          </ol>
        </nav>
      </div><!-- End Page name -->


      <section class="section">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-body">
                <h5 class="card-name">Add Category</h5>
                <% if (previousdata.errors) { %>
                  <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    <ul class="list-group" style="background: none;">
                      <% previousdata.errors.map(function(error,i) { %>
                        <li class="list-group-item" style="background: none;">
                          <span>
                            <%= i+1 %> -
                          </span>
                          <%= error %>
                        </li>
                        <% }); %>
                    </ul>
                  </div>
                  <% } %>


                    <!-- Multi Columns Form -->

                    <form action="/Category/AddCategoryOperation" method="post">
                      <div class="col-md-12">
                        <label for="inputName5" class="form-label">name</label>

                        <input type="text" id="name" name="name"
                          value="<%= previousdata.data.name && previousdata.data.name %>" class="form-control">

                      </div>

                      <div class="col-12">
                        <label for="inputAddress5" class="form-label">URLS</label>

                        <textarea class="form-control" id="url" name="url"><%= previousdata.data.name && previousdata.data.url %>
                  </textarea>
                      </div>

                      <div class="text-center mt-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                      </div>
                    </form><!-- End Multi Columns Form -->

              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <main id="main" class="main">
      <div>
        <h1>Add Category Views..</h1>
        <pre><%= JSON.stringify(previousdata.errors, null, 2) %></pre>
        <pre><%= JSON.stringify(previousdata, null, 2) %></pre>



        <div>
          <form action="/Category/AddCategoryOperation" method="post">
            <label for="name">name:</label>
            <input type="text" id="name" name="name"
              value="<%= previousdata.data.name && previousdata.data.name %>"><br><br>
            <label for="url">url:</label>
            <textarea id="url" name="url"><%= previousdata.data.name && previousdata.data.url %></textarea><br><br>


            <br />

            <br />
            <input type="submit" value="Add Category" />
          </form>

        </div>


      </div>

    </main>


    <%- include('../footer') %>